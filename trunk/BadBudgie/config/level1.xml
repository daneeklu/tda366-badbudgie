<?xml version="1.0" encoding="UTF-8"?>
<leveldata>
	<!--The starting location of the player. -->
	<playerposition x="0" y="0"/>
	
	<!--Sprites used in the level -->
	<sprites>
		<sprite id="smurf" startanim="1" textureid="smurf">
			<segments x="5" y="2" />
			<animations>
				<animationid>smurfloop</animationid>
				<animationid>smurfstill</animationid>
			</animations>
		</sprite>
	</sprites>
	
	<!--Animations used by sprites -->
	<animations>
		<animation id="smurfloop" loop="true">
			<frames>
				<sequence>
					<from>1</from>
					<to>9</to>
					<duration>0.2</duration>
				</sequence>
			</frames>
		</animation>
		<animation id="smurfstill" loop="false">
			<frames>
				<frame index="1" duration="1" />
			</frames>
		</animation>
	</animations>
	
	<!--Game objects placed in the level -->
	<gameobjects>
		<gameobject id="objectID">
			<position x="0" y="0" />
		</gameobject>
	</gameobjects>
	
	<!--Terrain segments used in the level -->
	<terrainsections>
		<terrain x="-3" y="-10" sprite="grass" friction="0.5" elasticity="0">
			<position x="0" y="0" />
			<polygon>
				<vector x="0" y="0" />
				<vector x="2" y="0" />
				<vector x="2" y="2" />
				<vector x="0" y="2" />
			</polygon>
		</terrain>
	</terrainsections>
</leveldata>