<?xml version="1.0" encoding="UTF-8"?>
<leveldata>
	<!--The starting location of the player. -->
	<playerposition>
		<x>0</x>
		<y>0</y>
	</playerposition>
	
	<!--Sprites used in the level -->
	<sprites>
		<sprite id="smurf" startanim="1" textureid="animtest">
			<segments>
				<x>5</x>
				<y>2</y>
			</segments>
			<animations>
				<animationid>smurfloop</animationid>
				<animationid>smurfstill</animationid>
			</animations>
		</sprite>
	<sprites>
	
	<!--Animations used by sprites -->
	<animations>
		<animation id="smurfloop" loop="true">
			<frames>
				<sequence>
				<from>1</from>
				<to>9</to>
				<duration>1</duration>
				</sequence>
			</frames>
		</animation>
		<animation id="smurfstill" loop="false">
			<frames>
				<frame>
					<index>3</index>
					<duration>1</duration>
				</frame>
			</frames>
		</animation>
	<animations>
	
	<!--Game objects placed in the level -->
	<gameobjects>
		<gameobject id="objectID">
			<position x="0" y="0" ></position>
		</gameobject>
	</gameobjects>
	
	<!--Terrain segments used in the level -->
	<terrain>
		<segment>
		<!--Add collision data-->
		<!--Add graphics data-->
		</segment>
	</terrain>
</leveldata>